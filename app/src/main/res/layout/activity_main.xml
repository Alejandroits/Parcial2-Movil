<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/product1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="613dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product1ImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Product Image"
            android:src="@drawable/nike_dm0011_002" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product1NameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tenis Nike"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product1PriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: $180.000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/addProduct1Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/product2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="503dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product2ImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Product Image"
            android:src="@drawable/adidas_court_kids_aq4592_05_900x" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product2NameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tenis Adidas"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product2PriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: $240.000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/addProduct2Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart" />
        </LinearLayout>
    </LinearLayout>

    <!-- Repeat the above layout for other products (product2Layout, product3Layout, product4Layout) -->

    <LinearLayout
        android:id="@+id/product4Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="361dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="268dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product4ImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Product Image"
            android:src="@drawable/dcd50773_7dfa_4db1_a0ab_fc6ca04bda8f" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product4NameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camiseta Supreme"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product4PriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: $120.000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/addProduct4Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/product3Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="239dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="390dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product3ImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Product Image"></ImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product3NameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tenis Reebok"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product3PriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: $232.000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/addProduct3Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/gotoSecondActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="177dp"
        android:text="Ver Factura" />


</RelativeLayout>
