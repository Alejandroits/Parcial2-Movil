<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/invoiceTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="Factura"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/product1InvoiceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/product1InvoiceNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tenis Nike"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product1InvoicePriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="180.000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/product1InvoiceTaxTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="IVA: "
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/product2InvoiceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/product2InvoiceNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tenis Adidas"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product2InvoicePriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="240.000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/product2InvoiceTaxTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="IVA: "
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/product3InvoiceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/product3InvoiceNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tenis Reebok"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product3InvoicePriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text=" 232.000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/product3InvoiceTaxTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="IVA:"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/product4InvoiceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/product4InvoiceNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Camiseta Supreme"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product4InvoicePriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="120.000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/product4InvoiceTaxTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="IVA:"
            android:textSize="16sp" />

    </LinearLayout>
    <!-- Repeat the above layout for other products (product2InvoiceLayout, product3InvoiceLayout, product4InvoiceLayout) -->

    <TextView
        android:id="@+id/totalInvoiceTextView"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:text="Total: $0.00"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
